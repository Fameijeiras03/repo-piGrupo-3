<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<% if (locals.user != undefined) { %>
		<%- include('partials/headerLogueado.ejs') %>
	<% } else { %>
		<%- include('partials/header.ejs') %>
	<% } %>

	
	<section class="banner-container">
    <img src="/images/cardealership banner banner.svg" alt="Luxury Imports Banner" class="banner-image">
	</section>
		
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<%if (locals.user == undefined) { %>
					<h2>Bienvenido a Luxury Imports, logueate para mas</h2>
				<% } else { %>
					<h2>Bienvenido <%= user.email %>
					</h2>
				<% } %>
			</div>
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			
			
		<% for (let i = 0; i < productos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= productos[i].id %>">
						<figure class="product-box_image">
							<img src='<%= productos[i].imagen %>' alt="" width="100">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].producto %></h2>
							<p><%= productos[i].descripcion %></p>
							
						</article>
					</a>
				</section>
			</div>
		<% } %>
	
</body>
<%- include('partials/footer.ejs') %>
</html>
