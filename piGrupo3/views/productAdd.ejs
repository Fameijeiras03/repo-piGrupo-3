<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
    <body>
    <% if (locals.user != undefined) { %>
		<%- include('partials/headerLogueado.ejs') %>
	<% } else { %>
		<%- include('partials/header.ejs') %>
	<% } %>

    <h1>Agregar producto</h1>
    <div class="caja-form-pAdd">
        <form action="/product/store" method="POST" id="registerForm">
            <div style="margin-bottom:12px;">
            <label for="imagen">Imagen (nombre del archivo con extensión):</label>
            <input type="text" id="imagen" name="imagen" required style="width:100%;">
            </div>

            <div style="margin-bottom:16px;">
            <label for="producto">Nombre del producto:</label>
            <input type="text" id="producto" name="producto" required style="width:100%;">

            </div>

            <div style="margin-bottom:16px;">
            <label for="descripcion">Descripción:</label><br>
            <textarea id="descripcion" name="descripcion" required style="width:100%; height:100px;"></textarea>
            </div>

            <button type="submit">Guardar</button>
        </form>
    </div>
        
    
        
<%- include('partials/footer.ejs') %>

</body>
</html>