<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	
	<% if (locals.user != undefined) { %>
		<%- include('partials/headerLogueado.ejs') %>
	<% } else { %>
		<%- include('partials/header.ejs') %>
	<% } %>
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.email %></h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>Total de productos: <%= cantidadProductos %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			
			<!-- Verificar si hay productos -->
			<% if (productos.length == 0) { %>
				<div class="col-12">
					<p>No tenés productos cargados todavía.</p>
				</div>
			<% } else { %>
				<!-- Mostrar TODOS los productos del usuario -->
				<% for (let i = 0; i < productos.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= productos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= productos[i].imagen %>" alt="<%= productos[i].producto %>" width="100">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].producto %></h2>
									<p><%= productos[i].descripcion %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

	<%- include('partials/footer.ejs') %>

</body>
</html>